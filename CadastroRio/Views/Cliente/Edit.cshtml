@model CadastroRio.Models.Cliente
@using CadastroRio.Models
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Alterar</title>
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/metisMenu/metisMenu.min.css" rel="stylesheet">
    <link href="~/dist/css/sb-admin-2.css" rel="stylesheet">
    <link href="~/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>
<body>
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">

            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li>
                            <a href="~/Cliente/Listar"><i class="fa fa-dashboard fa-fw"></i> Consulta</a>
                        </li>
                        <li>
                            <a href="~/Cliente/Create"><i class="fa fa-dashboard fa-fw"></i> Cadastro</a>
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Alterar Cliente</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Preencha os campos com os dados solicitados
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <form role="form" method="post" action="Edit">
                                    <div class="col-lg-8">
                                        <input class="form-control" type="hidden" name="id" value="@Html.DisplayFor(model => model.idCliente)">
                                        <div class="form-group">
                                            <label>Nome</label>
                                            <input class="form-control" type="text" name="nome" value="@Html.DisplayFor(model => model.nomeCliente)" required>
                                        </div>
                                        <div class="form-group">
                                            <label>CPF</label>
                                            <input class="form-control" type="text" name="cpf" data-mask="000.000.000-00" placeholder="ex: 000.000.000-00" value="@Html.DisplayFor(model => model.cpfCliente)" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Data Nascimento</label>
                                            <input class="form-control" type="text" name="datanascimento" data-mask="00/00/0000" placeholder="ex: 01/01/2000" value="@Html.DisplayFor(model => model.dataNascimentoCliente)" required>
                                        </div>
                                        <div class="form-group">
                                            <label>Genero</label>
                                            <select class="form-control" name="genero">
                                                <option value="M">Masculino</option>
                                                <option value="F">Feminino</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-lg-10">
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <button class="btn btn-default form-control" id="btn-add-telefone">Novo telefone</button>
                                            </div>
                                            <div class="col-md-8" id="div-telefones">
                                                @for (int i = 0; i < Model.Telefones.Count; i++)
                                                {
                                                <div class="row">
                                                    <div class="col-md-2">
                                                        <input id="idtelefone" Type="hidden" name="idtelefone [@i]" value="@Html.DisplayFor(model => model.Telefones[i].idTelefone)">
                                                        <input type="number" min="11" max="99" maxlength="2" name="ddd [@i]" placeholder="DDD" class="form-control txt-ddd" value="@Html.DisplayFor(model => model.Telefones[i].ddd)" />
                                                    </div>
                                                    <div class="col-md-5">
                                                        <input type="text" maxlength="9" name="numero [@i]" class="form-control txt-numero" placeholder="Número" value="@Html.DisplayFor(model => model.Telefones[i].numero)" />
                                                    </div>
                                                    <div class="col-md-1">
                                                        <button class="btn btn-danger btn-remover-telefone"
                                                                data-id="@Model.Telefones[i].idTelefone">
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                        </button>
                                                    </div>
                                                </div>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <p>*A inserção de pelo menos um telefone é obrigatória</p>
                                        <input id="qtdtelAlt" name="qtdtelAlt" Type="hidden" value="@Model.Telefones.Count">
                                        <input id="qtdtel" name="qtdtel" Type="hidden" value="0">
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <button type="submit"  id="editar" value="Edit" class="btn btn-success btn-lg">Alterar</button>
                                            <button type="reset" class="btn btn-warning btn-lg">Limpar</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /#page-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- jQuery -->
    <script src="@Url.Content("~/vendor/jquery/jquery.min.js")"></script>
    <script src="@Url.Content("~/vendor/bootstrap/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/vendor/met3isMenu/metisMenu.min.js")"></script>
    <script src="@Url.Content("~/dist/js/sb-admin-2.js")"></script>
    <script src="@Url.Content("~/Script/input-mask.min.js")"></script>
    <script src="@Url.Content("~/Scripts/input-mask.js")"></script>
    <script src="@Url.Content("~/Scripts/validar.js")"></script>
    <script src="@Url.Content("~/Scripts/validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/edicao-telefone.js")"></script>

</body>
</html>
